#!/usr/bin/env bash

dotenv

command_exists() {
  command -v "$1" >/dev/null 2>&1
}

# Check if source_env_if_exists is available
if command_exists source_env_if_exists; then
  source_env_if_exists .envrc.private
else
  # Fallback for older direnv versions
  if [[ -f .envrc.private ]]; then
    source .envrc.private
  fi
fi
